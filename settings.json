// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "wsl_connections": [
    {
      "distro_name": "UbuntuNidac",
      "user": null,
      "projects": [
        {
          "paths": ["/home/delcx/NIDAC/Projects/itid-gravity-monorepo/./"],
        },
      ],
    },
  ],
  "minimap": {
    "max_width_columns": 80,
    "show": "always",
  },
  "show_signature_help_after_edits": true,
  "auto_signature_help": true,
  "preferred_line_length": 120,
  "soft_wrap": "preferred_line_length",
  "rounded_selection": false,
  "selection_highlight": false,
  "current_line_highlight": "gutter",
  "cursor_shape": "block",
  "cursor_blink": false,
  "agent_buffer_font_size": 12.0,
  "scroll_beyond_last_line": "one_page",
  "agent_ui_font_size": 16.0,
  "ui_font_weight": 400.0,
  "buffer_font_weight": 400.0,
  "inlay_hints": {
    "enabled": true,
  },
  "buffer_font_family": "Iosevka",
  "buffer_font_features": {
    "calt": true,
  },
  "ui_font_family": ".ZedMono",
  "vim_mode": true,
  "base_keymap": "VSCode",
  "icon_theme": {
    "mode": "dark",
    "light": "Zed (Default)",
    "dark": "Zed (Default)",
  },
  "ui_font_size": 17.0,
  //"buffer_font_size": 26.0,
  //"buffer_font_size": 22.0,
  "buffer_font_size": 26,
  "theme": {
    "mode": "dark",
    "light": "Dracula Light (Alucard)",
    "dark": "Delinx Dark Modern 2026",
  },
  "disable_ai": true,
  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q",
  },
  "lsp": {
    "pyright": {
      "settings": {
        "pyright": {
          "disableOrganizeImports": true,
        },
      },
    },
    "ols": {
      "binary": {
        "path": "C:/ols/ols.exe",
        "arguments": [],
      },
    },
  },
  "languages": {
    "Python": {
      "code_actions_on_format": {
        "source.organizeImports.ruff": false,
      },
    },
    "Odin": {
      "formatter": {
        "external": {
          "command": "odinfmt",
          "arguments": ["-stdin"],
        },
      },
    },
    "C": {
      "formatter": {
        "external": {
          "command": "C:/Program Files (x86)/Caphyon/Clang Format Editor/clang-format.exe",
          "arguments": ["--style=file", "--assume-filename={buffer_path}"],
        },
      },
    },
  },
  "format_on_save": "on",
  "gutter": {
    "line_numbers": true,
    "runnables": false,
    "breakpoints": false,
    "folds": true,
    "min_line_number_digits": 2,
  },
  "project_panel": {
    "dock": "right",
  },
  "hover_popover_enabled": false,
  "relative_line_numbers": "disabled",
  "vertical_scroll_margin": 2,
}
